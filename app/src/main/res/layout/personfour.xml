<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/title1"
                android:layout_centerInParent="true"
                android:text="办理住宿"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@mipmap/base_action_bar_back_normal"
                android:layout_width="60dp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/xingming1"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="测试姓名"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="学号"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/xuehao1"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="1111111111"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="性别"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/xingbie1"
                android:layout_marginTop="10sp"
                android:layout_marginRight="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:text="女"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/buildinga"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:text="目标宿舍楼                   13号楼"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <Spinner
                android:id="@+id/select3"
                android:layout_alignParentRight="true"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
            </Spinner>
        </RelativeLayout>
        <TextView
            android:text="同住人信息"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/xh1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:gravity="center_vertical"
                android:text="学号1"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/stu4_1"
                android:inputType="number"
                android:padding="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/yzm1"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="校验码1"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/v4code_1"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:inputType="textVisiblePassword"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/xh2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:gravity="center_vertical"
                android:text="学号2"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/stu4_2"
                android:inputType="number"
                android:padding="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/yzm2"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="校验码2"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/v4code_2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/xh3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:gravity="center_vertical"
                android:text="学号3"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/stu4_3"
                android:inputType="number"
                android:padding="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginTop="10sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/yzm3"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15sp"
                android:gravity="center_vertical"
                android:text="校验码3"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/v4code_3"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:layout_marginTop="60dp"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn4"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="确定"
            android:textSize="20sp"
            android:background="@drawable/shape"/>
    </LinearLayout>
</ScrollView>
